					\end{minipage}
					
					\\
					
					\begin{minipage}{0.45\hsize}
						\begin{center}
							\includegraphics[width=7.0cm]{figure_1-3.pdf}
							\caption{$r=2.7$で$x_{0}=0.1, 2.0$とした時のグラフ}
